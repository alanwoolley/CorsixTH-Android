<?xml version="1.0" encoding="utf-8"?>
<uk.co.armedpineapple.cth.wizard.LanguageWizard xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/languageHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="@string/language_header"
        android:textAppearance="@style/WizardHeaderText" />

    <TextView
        android:id="@+id/languageText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/languageHeader"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="@string/language_text"
        android:textAppearance="@style/WizardText" />

    <ListView
        android:id="@+id/languageListView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/languageText"
        android:layout_centerHorizontal="true"
        android:choiceMode="singleChoice" />

</uk.co.armedpineapple.cth.wizard.LanguageWizard>